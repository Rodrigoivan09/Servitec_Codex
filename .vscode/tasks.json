{
  // VS Code tasks to run Docker Compose using local socket
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Docker: Up (local socket)",
      "type": "shell",
      "options": {
        "env": { "DOCKER_HOST": "" }
      },
      "command": "docker compose up --build -d",
      "problemMatcher": []
    },
    {
      "label": "Docker: Down",
      "type": "shell",
      "options": {
        "env": { "DOCKER_HOST": "" }
      },
      "command": "docker compose down -v",
      "problemMatcher": []
    },
    {
      "label": "Docker: Logs (app)",
      "type": "shell",
      "options": {
        "env": { "DOCKER_HOST": "" }
      },
      "command": "docker compose logs -f --tail=200 app",
      "problemMatcher": []
    }
  ]
}

